{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "prettier",
        "plugin:prettier/recommended",
        "prettier/flowtype",
        "prettier/react",
        "prettier/standard"
    ],
    "globals": {
    //     "Atomics": "readonly",
    //     "SharedArrayBuffer": "readonly"
    },    
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 8,
        "sourceType": "module"        
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "parser": "babel-eslint",
    //"parser":"esprima",
    // "settings":{
    //     "react":{
    //         "version":"detect"
    //     }
    // },
    "rules": {
        "prettier/prettier":"error",
        "no-debugger":2,
        "linebreak-style":0,
        "no-console":2,
        "no-var":2,
        "semi": 2
    }
}
